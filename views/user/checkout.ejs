<%-include('../../views/partials/user/_header')%>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        
        .container {
            max-width: 1200px;
        }
        
        .checkout-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e9ecef;
        }
        
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 1.5rem;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }
        
        .card-header {
            background-color: #ffffff;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1.2rem 1.5rem;
            border-radius: 12px 12px 0 0 !important;
            font-weight: 600;
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .address-card {
            cursor: pointer;
            transition: all 0.3s;
            border: 2px solid transparent;
            height: 100%;
        }
        
        .address-card.selected {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
        
        .address-card:hover:not(.selected) {
            border-color: #e0e0e0;
        }
        
        .badge {
            padding: 0.5em 0.8em;
            font-weight: 500;
            border-radius: 30px;
        }
        
        .badge.bg-success {
            background-color: #1cc88a !important;
        }
        
        .product-image {
            max-width: 80px;
            max-height: 80px;
            object-fit: contain;
            border-radius: 8px;
            padding: 5px;
            background-color: #f8f9fa;
        }
        
        .product-item {
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            transition: all 0.3s;
        }
        
        .product-item:hover {
            background-color: #f8f9fc;
            transform: translateX(5px);
            border-radius: 8px;
        }
        
        .product-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }
        
        .product-name {
            font-weight: 500;
            margin-bottom: 0.3rem;
        }
        
        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            padding: 0.6rem 1.5rem;
            border-radius: 50px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            background-color: #3a5bbc;
            border-color: #3a5bbc;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(78, 115, 223, 0.3);
        }
        
        .btn-outline-primary {
            color: #4e73df;
            border-color: #4e73df;
            border-radius: 50px;
            font-weight: 500;
        }
        
        .btn-outline-primary:hover {
            background-color: #4e73df;
            color: #fff;
        }
        
        .btn-outline-secondary {
            border-radius: 50px;
            font-weight: 500;
        }
        
        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.7rem;
            font-size: 0.95rem;
        }
        
        .summary-total {
            font-size: 1.2rem;
            font-weight: 600;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 2px solid #e9ecef;
        }
        
        .text-discount {
            color: #1cc88a;
            font-weight: 500;
        }
        
        .coupon-section {
            background-color: #f8f9fc;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .input-group {
            margin-top: 0.5rem;
        }
        
        .input-group .form-control {
            border-radius: 50px 0 0 50px;
            padding-left: 1rem;
        }
        
        .input-group .btn {
            border-radius: 0 50px 50px 0;
            padding-right: 1.2rem;
        }
        
        .modal-content {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .modal-header {
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1.5rem;
        }
        
        .modal-footer {
            border-top: 1px solid rgba(0,0,0,0.05);
            padding: 1.5rem;
        }
        
        .success-icon {
            font-size: 5rem;
            color: #1cc88a;
            margin-bottom: 1rem;
            animation: pulse 1.5s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
        
        .progress-steps {
            display: flex;
            margin-bottom: 2rem;
            position: relative;
            justify-content: space-between;
        }
        
        .progress-steps::before {
            content: '';
            position: absolute;
            top: 15px;
            left: 0;
            right: 0;
            height: 2px;
            background: #e9ecef;
            z-index: 0;
        }
        
        .step {
            position: relative;
            z-index: 1;
            text-align: center;
            width: 33.33%;
        }
        
        .step-circle {
            background: white;
            border: 2px solid #4e73df;
            color: #4e73df;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            margin: 0 auto 8px;
        }
        
        .step.active .step-circle {
            background: #4e73df;
            color: white;
        }
        
        .step.completed .step-circle {
            background: #1cc88a;
            border-color: #1cc88a;
            color: white;
        }
        
        .step-title {
            font-size: 0.85rem;
            color: #6c757d;
        }
        
        .step.active .step-title {
            color: #4e73df;
            font-weight: 600;
        }
        
        .step.completed .step-title {
            color: #1cc88a;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="checkout-header">
                    <h2 class="mb-3">Checkout</h2>
                    
                </div>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="row g-4">
            <!-- Left Side - Address & Payment -->
            <div class="col-lg-7">
                <!-- Delivery Address Section -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Delivery Address</h5>
                        <a href="/account/addAddress?redirectTo=/checkout">
                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addAddressModal">
                                <i class="bi bi-plus-circle me-1"></i> Add New Address
                            </button>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">

                            

                            <% for (let i = 0; i < address.length; i++) { %>
                                <div class="col-md-6" >
                                    <div class="card address-card <%= address[i].isDefault ? 'selected' : '' %> h-100" data-id="<%= address[i]._id %>">
                            
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between mb-2">
                                                <h6><i class="bi bi-house me-2"></i><%= address[i].addressType %></h6>
                            
                                                <% if (address[i].isDefault) { %>
                                                    <span class="badge bg-success">Default</span>
                                                <% } %>
                                            </div>
                            
                                            <p class="mb-1 fw-medium"><%= address[i].fullName %></p>
                                            <p class="mb-1 text-muted"><%= address[i].streetAddress %> <% if (address[i].apartment) { %>, <%= address[i].apartment %><% } %></p>
                                            <% if (address[i].landmark) { %>
                                                <p class="mb-1 text-muted">Landmark: <%= address[i].landmark %></p>
                                            <% } %>
                                            <p class="mb-1 text-muted"><%= address[i].city %>, <%= address[i].state %> <%= address[i].postalCode %></p>
                                            <p class="mb-2 text-muted"><i class="bi bi-telephone me-1"></i><%= address[i].phoneNumber %></p>
                            
                                            <div class="mt-3">
                                                <a href="/account/editAddress?id=<%=address[i]._id%>&redirectTo=/checkout">
                                                    <button class="btn btn-sm btn-outline-secondary edit-address-btn" onclick="">
                                                        <i class="bi bi-pencil me-1"></i> Edit
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            
                            
                            
                        </div>
                    </div>
                </div>
                
                <!-- Payment Method Section -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-wallet2 me-2"></i>Payment Method</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3 p-3 bg-light rounded">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cashOnDelivery" checked>
                            <label class="form-check-label fw-medium" for="cashOnDelivery">
                                <i class="bi bi-cash me-2 text-success"></i> Cash on Delivery
                            </label>
                            <p class="text-muted small ms-4 mb-0 mt-1">Pay with cash when your order is delivered to your doorstep.</p>
                        </div>
                        <!-- Other payment methods would go here -->
                    </div>
                </div>
            </div>
            
            <!-- Right Side - Order Summary -->
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bag-check me-2"></i>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <!-- Products -->
                        <div class="mb-4">
                            <h6 class="mb-3 pb-2 border-bottom">Items in Your Order (3)</h6>
                            
                            
                            
                             <!-- Product Item 2 -->
                        <% for(let i=0;i< cart.items.length;i++) {%>
                            <div class="product-item d-flex">
                                <img src="/uploads/products-images/<%= cart.items[i].productId.productImage[0] %>" alt="Product" class="product-image me-3">
                                <div class="flex-grow-1">
                                    <h6 class="product-name"><%=cart.items[i].productId.productTitle %></h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="badge bg-light text-dark"><i class="bi bi-box me-1"></i>Qty:<%=cart.items[i].quantity %></span>
                                        </div>
                                        <div class="text-end">
                                            <p class="mb-0 fw-medium"><%=cart.items[i].totalPrice %></p>
                                            <small class="text-muted">(<%=cart.items[i].price %> each)</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>     
                            
                            
                            
                        </div>
                        <hr>
                        <!-- Coupon Code -->
                        <!-- <div class="coupon-section mb-4">
                            <h6 class="mb-2"><i class="bi bi-tag me-2"></i>Apply Coupon</h6>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter coupon code" aria-label="Coupon code">
                                <button class="btn btn-primary" type="button">Apply</button>
                            </div>
                        </div> -->
                        
                        <!-- Order Calculations -->
                        <div class="mb-4">
                            <div class="summary-row">
                                <span>Subtotal</span>
                                <span><%=totalRegularprice %></span>
                            </div>
                            <div class="summary-row">
                                <span>Shipping</span>
                                <span>free</span>
                            </div>
                            <!-- <div class="summary-row">
                                <span>Tax (8%)</span>
                                <span>$15.60</span>
                            </div> -->
                            <div class="summary-row">
                                <span>Discount</span>
                                <span class="text-discount">-<%=totalRegularprice - cart.totalPrice %></span>
                            </div>
                            <div class="summary-row summary-total">
                                <span>Total</span>
                                <span><%= cart.totalPrice %></span>
                            </div>
                        </div>

                        <!-- Place Order Button -->
                        <button class="btn btn-primary w-100 py-3 mb-3" id="placeOrderBtn">
                            <i class="bi bi-bag-check me-2"></i> Place Order
                        </button>
                        <p class="text-muted text-center small">By placing your order, you agree to our <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
    <!-- Order Success Modal -->
    <div class="modal fade" id="orderSuccessModal" tabindex="-1" aria-labelledby="orderSuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center py-5">
                    <div class="success-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h3 class="mb-3">Order Placed Successfully!</h3>
                    <p class="text-muted mb-4">Thank you for your purchase. Your order #ORD123456 has been confirmed and will be delivered soon.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="btn btn-outline-primary px-4">View Order Details</a>
                        <a href="#" class="btn btn-primary px-4">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Show order success modal when place order button is clicked
            document.getElementById('placeOrderBtn').addEventListener('click',async function() {
                const selectedAddress = document.querySelector(".address-card.selected");
                const addressId = selectedAddress.getAttribute("data-id")
                if(addressId){
                    const responce = await fetch('/placeOrder',{
                        method:"POST",
                        headers:{"Content-Type":"application/json"},
                        body:JSON.stringify({addressId})
                    })

                    const jsonResponce = await responce.json()

                    if(responce.ok){
                        const orderSuccessModal = new bootstrap.Modal(document.getElementById('orderSuccessModal'));
                        orderSuccessModal.show();
                    }else{
                        Swal.fire({
                        title: "error",
                        text: jsonResponce.message,
                        icon: "error"
                        });
                    }
                }
                

                
            });
            
            // Make address cards selectable
            document.querySelectorAll('.address-card').forEach(card => {
                card.addEventListener('click', function() {
                    document.querySelectorAll('.address-card').forEach(c => c.classList.remove('selected'));
                    this.classList.add('selected');
                });
            });
        });
    </script>
</body>


<%-include('../../views/partials/user/_footer')%>
