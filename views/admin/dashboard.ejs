  <script>
    // Sample data
    const monthlyLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    const weeklyLabels = ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5'];
    const dailyLabels = Array.from({ length: 30 }, (_, i) => `Day ${i + 1}`);
    const yearlyLabels = ['2020', '2021', '2022', '2023', '2024'];

    // Charts configuration

    function lineChartConfig(id,data,label){
      const chart = Chart.getChart(id); // id = canvas id
      if (chart) {
        chart.destroy();
      }
      const userChart = new Chart(
        document.getElementById(id),
      {
        type: 'line',
        data: {
          labels: data.label,
          datasets: [
            {
              label: label,
              data: data.value,
              borderColor: '#4e73df',
              backgroundColor: 'rgba(78, 115, 223, 0.05)',
              fill: true,
              tension: 0.4
            },
            
          ]
        },
        options: {
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'top'
            }
          },
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      }

      )
    }


    let salesChartConfig = {
      type: 'line',
      data: {
        labels: monthlyLabels,
        datasets: [
          {
            label: 'Sales',
            data: [25000, 30000, 27500, 32500, 35000, 40000, 42500, 45000, 48000, 51000, 55000, 60000],
            borderColor: '#4e73df',
            backgroundColor: 'rgba(78, 115, 223, 0.05)',
            fill: true,
            tension: 0.4
          },
          
        ]
      },
      options: {
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'top'
          }
        },
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    };

    let userChartConfig = {
      type: 'line',
      data: {
        labels: monthlyLabels,
        datasets: [{
          label: 'New Users',
          data: [50, 80, 75, 90, 110, 125, 130, 140, 150, 170, 190, 210],
          borderColor: '#1cc88a',
          backgroundColor: 'rgba(28, 200, 138, 0.1)',
          fill: true,
          tension: 0.4
