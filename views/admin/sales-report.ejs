<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
    body {
        background-color: #f5f7fb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    .container-fluid {
        padding: 2rem;
    }
    
    .dashboard-header {
        margin-bottom: 2rem;
    }
    
    .dashboard-title {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }
    
    .dashboard-subtitle {
        color: #7f8c8d;
        font-size: 1rem;
    }
    
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }
    
    .card-header {
        background-color: #ffffff;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        padding: 1.25rem;
        font-weight: 600;
    }
    
    .card-metric {
        border-left: none;
        border-radius: 12px;
        position: relative;
        overflow: hidden;
    }
    
    .card-metric::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 6px;
        height: 100%;
        border-radius: 6px 0 0 6px;
    }
    
    .card-metric.sales::before {
        background: linear-gradient(to bottom, #4a6cf7, #3b82f6);
    }
    
    .card-metric.amount::before {
        background: linear-gradient(to bottom, #10b981, #059669);
    }
    
    .card-metric.discount::before {
        background: linear-gradient(to bottom, #f97316, #ea580c);
    }
    
    .custom-date-inputs {
        display: none;
    }
    
    .report-filters {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .filter-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 1.25rem;
    }
    
    .form-control, .form-select {
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
    }
    
    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25);
        border-color: #3b82f6;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #4a6cf7, #3b82f6);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #3b5ef8, #2d74f5);
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(59, 130, 246, 0.4);
    }
    
    .btn-outline-primary {
        border: 1px solid #3b82f6;
        color: #3b82f6;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
    }
    
    .btn-outline-primary:hover {
        background-color: #3b82f6;
        color: white;
    }
    
    .btn-outline-success {
        border: 1px solid #10b981;
        color: #10b981;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
    }
    
    .btn-outline-success:hover {
        background-color: #10b981;
        color: white;
    }
    
    .icon-shape {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.25rem;
    }
    
    .text-primary {
        color: #3b82f6 !important;
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .text-warning {
        color: #f97316 !important;
    }
    
    .pagination .page-link {
        border-radius: 8px;
        margin: 0 3px;
        border: none;
        color: #3b82f6;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #3b82f6;
        color: white;
    }
    
    .table {
        margin-bottom: 0;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
    }
    
    .table td {
        font-size: 0.95rem;
        vertical-align: middle;
        padding: 1rem 0.75rem;
    }
    
    .badge {
        font-weight: 500;
        padding: 0.5em 0.75em;
        border-radius: 6px;
    }
    
    .download-section {
        padding: 1.5rem;
    }
    
    .download-title {
        font-weight: 600;
        margin-bottom: 1rem;
        color: #2c3e50;
    }
    
    .download-description {
        color: #64748b;
        margin-bottom: 1.5rem;
    }
    
    .form-check-input:checked {
        background-color: #3b82f6;
        border-color: #3b82f6;
    }
    
    .search-box {
        position: relative;
    }
    
    .search-box .form-control {
        padding-left: 2.5rem;
        border-radius: 8px;
    }
    
    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
    }
    
    .no-data-message {
        text-align: center;
        padding: 2rem;
        color: #64748b;
    }
    
    .coupon-badge {
        font-size: 0.75rem;
        padding: 0.35em 0.65em;
        border-radius: 0.5rem;
    }
</style>
</head>
<body>
<div class="container-fluid">
    <div class="row dashboard-header">
        <div class="col">
            <h1 class="dashboard-title">Sales Report Dashboard</h1>
            <p class="dashboard-subtitle">Track and analyze your sales performance with flexible reporting options</p>
        </div>
    </div>

    <!-- Report Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card report-filters">
                <div class="filter-title">Report Filters</div>
                <form id="reportFiltersForm">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Date Range Type</label>
                            <select class="form-select" id="dateRangeType">
                                <option value="daily" selected>Daily (1 Day)</option>
                                <option value="weekly" >Weekly</option>
                                <option value="monthly">Monthly</option>
                                <option value="yearly">Yearly</option>
                                <option value="custom">Custom Date Range</option>
                            </select>
                        </div>
                        
                        <div class="col-md-3 custom-date-inputs">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate">
                        </div>
                        
                        <div class="col-md-3 custom-date-inputs">
