                        <button class="btn btn-outline-success" type="button" id="excelDownload">
                            <i class="far fa-file-excel me-2"></i>Download as Excel
                        </button>
                    </div>
                    
                    
                   
                    
                    
                </div>
            </div>
        </div>
        
        <!-- Detailed Sales Table -->
